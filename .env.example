NODE_ENV=${NODE_ENV} # This is the environment where the server will run
MONGO_DB_URI=${MONGO_DB_URI} # This is the URI of the MongoDB database
DATABASE_NAME=${DATABASE_NAME} # This is the name of the database
PORT=${PORT} # This is the port where the server will run
MONGO_MAX_RETRIES=${MONGO_MAX_RETRIES} # This is the maximum number of retries to connect to the database
MONGO_RETRY_DELAY=${MONGO_RETRY_DELAY} # This is the delay between retries to connect to the database
APP_SECRET=${APP_SECRET} # This is the secret key for the JWT
JWT_EXPIRATION_TIME=${JWT_EXPIRATION_TIME} # This is expiration time for the JWT => 1, 1m, 1h, 1d, 1y
